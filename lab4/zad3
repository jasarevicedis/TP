//TP 2021/2022: LV 4, Zadatak 3
#include <cctype>
#include <iostream>
#include <cmath>
#include <vector>
#include <string>

typedef std::vector<std::string> VektorRijeci;

std::string ToUpper( std::string Rijec){
    std::string velikaslova;
    velikaslova.resize(Rijec.size());
    for(unsigned int i=0;i<Rijec.size();i++){
        velikaslova.at(i)=std::toupper(Rijec.at(i));
    }
    return velikaslova;
}

void IzdvojiKrajnjeRijeci(VektorRijeci Rijeci, std::string &Prva, std::string &Posljednja){
    if(Rijeci.size()==0){
        Prva="";
        Posljednja="";
        return;
    }
    Prva=Rijeci.at(0);
    Posljednja=Rijeci.at(0);
    for(unsigned int i=1;i<Rijeci.size();i++){
        if(ToUpper(Rijeci.at(i))> ToUpper(Posljednja)){
            Posljednja = Rijeci.at(i);
        }
        if(ToUpper(Rijeci.at(i))< ToUpper(Prva)){
            Prva = Rijeci.at(i);
        }
    }
}
void ZadrziDuplikate(VektorRijeci &Rijeci){
    for(unsigned int i=0;i<Rijeci.size();i++){
        bool DaLiSePonavlja = false;
        for(unsigned int j=i+1;j<Rijeci.size();j++){
            if(Rijeci.at(i)==Rijeci.at(j)) {
                DaLiSePonavlja=true;
                //brisanje
                for(unsigned int k=j;k<Rijeci.size()-1;k++){
                    Rijeci.at(k)=Rijeci.at(k+1);
                }
                Rijeci.resize(Rijeci.size()-1);
                j--;
            }
        }
        if(DaLiSePonavlja==false){
            for(int x=i;x<Rijeci.size()-1;x++){
                Rijeci.at(x)=Rijeci.at(x+1);
            }
            Rijeci.resize(Rijeci.size()-1);
            i--;
        }
    }
}

int main ()
{   
    std::string Prva,Posljednja;
    int brojRijeci;
    std::cout << "Koliko zelite unijeti rijeci: ";
    std::cin >> brojRijeci;
    VektorRijeci Rijeci;
    Rijeci.resize(brojRijeci);
    std::cout << "Unesite rijeci: ";
    for(int i=0;i<brojRijeci;i++){
        std::cin >> Rijeci.at(i);
    }
    IzdvojiKrajnjeRijeci(Rijeci, Prva, Posljednja);
    ZadrziDuplikate(Rijeci);
    std::cout << "Prva rijec po abecednom poretku je: " << Prva<< std::endl;
    std::cout << "Posljednja rijec po abecednom poretku je: " << Posljednja << std::endl;
    std::cout << "Rijeci koje se ponavljaju su: " << std::endl;
    for(unsigned int i=0;i<Rijeci.size();i++){
        std::cout << Rijeci.at(i) << " " << std::endl;
    }

	return 0;
}
