//TP 2021/2022: LV 4, Zadatak 5
#include <iostream>
#include <cmath>
#include <string>
#include <vector>

typedef std::vector<double> doubleVector;
typedef std::vector<std::string> stringVector;

template <typename nekiTip>
    std::vector<nekiTip> Presjek(std::vector<nekiTip> &v1, std::vector<nekiTip> &v2){
        std::vector<nekiTip> v3;
        for(unsigned int i=0;i<v1.size();i++){
            for(unsigned int j=0;j<v2.size();j++){
                if(v1.at(i)==v2.at(j)){
                    bool PonavljaSe(false);
                    for(nekiTip &x: v3){
                        if(x==v1.at(i)){
                            PonavljaSe=true;
                            break;
                        }
                    }
                    if(!PonavljaSe){
                        v3.push_back(v1.at(i));
                        break;
                    }
                }
            }
        }
        return v3;
    }

int main ()
{
    int broj_el1, broj_el2;
    double broj;
    doubleVector v1,v2,v3;
    std::cout << "Test za realne brojeve..." << std::endl;
    std::cout << "Unesite broj elemenata prvog vektora: ";
    std::cin >> broj_el1;
    std::cout << "Unesite elemente prvog vektora: ";
    for(unsigned int i=0;i<broj_el1;i++){
        std::cin >> broj;
        v1.push_back(broj);
    }
    std::cout << "Unesite broj elemenata drugog vektora: ";
    std::cin >> broj_el2;
    std::cout << "Unesite elemente drugog vektora: ";
    for(unsigned int i=0;i<broj_el2;i++){
        std::cin >> broj;
        v2.push_back(broj);
    }
    v3 = Presjek(v1,v2);
    std::cout << "Zajednicki elementi su: ";
    for(unsigned int i=0; i < v3.size();i++){
        std::cout << v3.at(i) << " ";
    }
    std::cout << std::endl;
    std::cout << std::endl;

    //string dio
    stringVector vek1,vek2,vek3;
    std::string rijec;
    std::cin.clear();
    std::cin.ignore(10000, '\n');
    std::cout << "Test za stringove...";
    std::cout << std::endl;
    std::cout << "Unesite broj elemenata prvog vektora: ";
    std::cin >> broj_el1;
    std::cout << "Unesite elemente prvog vektora (ENTER nakon svakog unosa):";
    for(unsigned int i=0;i<broj_el1;i++){
        std::getline (std::cin,rijec);
        vek1.push_back(rijec);
    }
    std::cout << "Unesite broj elemenata drugog vektora: ";
    std::cin >> broj_el2;
    std::cout << "Unesite elemente drugog vektora (ENTER nakon svakog unosa):";
    for(unsigned int i=0;i<broj_el2;i++){
        std::cin >> rijec;
        vek2.push_back(rijec);
    }
    vek3=Presjek(vek1, vek2);
    std::cout << "Zajednicki elementi su: ";
    for(unsigned int i=0; i < vek3.size();i++){
        std::cout << vek3.at(i) << " ";
    }


    
	return 0;
}
