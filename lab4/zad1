//TP 2021/2022: LV 4, Zadatak 1
#include <iostream>
#include <cmath>
#include <limits>

int Cifre(long long int n,int &c_min,int &c_max){
    int brojCifri(0),cifra;
    if(n==std::numeric_limits<long long int>::min()) n++;//razlog je sto je abs negativne vrijednosti veca za 1 od limita pozitivne, jer nemamo negativnu 0
    if(n<0) n*=-1;
    c_min=n%10;
    c_max=n%10;
    if(n==0) brojCifri++;
    while(n!=0){
        cifra=n%10;
        if(cifra<c_min) c_min=cifra;
        if(cifra>c_max) c_max=cifra;
        n/=10;
        ++brojCifri;
    }
    return brojCifri;
}

int main ()
{
    long long int n;
    int brojCifri,c_min,c_max;
    std::cout << "Unesite broj: ";
    std::cin >> n;
    brojCifri=Cifre(n,c_min,c_max);
    std::cout << "Broj " << n << " ima " << brojCifri << " cifara, najveca je " << c_max << " a najmanja " << c_min << ".";

	return 0;
}
