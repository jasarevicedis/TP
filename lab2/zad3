#include <iostream>
#include <complex>


int main ()
{
    std::complex<double> z;
    std::complex<double> suma(0,0);
    double re,im;
    int broj_el;
    std::cout << "Unesite broj elemenata: " << std::endl;
    std::cin >> broj_el;

    for(int i=1;i<=broj_el;i++){
        if(i!=broj_el){
            std::cout << "Z_" << i << " = ";
        }
        else {
            std::cout << "Z_" << i << " = " << std::endl;
        }

        std::cin >> z;
        suma+=1.00/z;
    }
    suma=1.00/suma;
    std::cout << "Paralelna veza ovih elemenata ima impedansu Z_ = (" << suma.real() << "," << suma.imag() << ").";
    return 0;
}
