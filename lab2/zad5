#include <iostream>
#include <complex>
#include <cmath>

int main ()
{
    int broj_el;
    std::complex<double> z;
    std::complex<double> suma(0,0);
    double modul,argument;
    double pi=atan(1)*4;

    std::cout << "Unesite broj elemenata: " <<std::endl;
    std::cin >> broj_el;
    for(int i=1;i<=broj_el;i++){
        std::cout << "Z" << i << " = ";
        std::cin >> modul;
        std::cout << "fi" << i << " = " << std::endl;
        std::cin >> argument;

        z=std::polar(modul,argument*(pi/180));
        suma+=1.00/z;
    }
    suma =1.00/suma;
    std::cout << "Paralelna veza ovih elemenata ima Z = " << std::abs(suma) << " i fi = " << std::arg(suma)*(180/pi) << "."; 
    return 0;
}
