#include <cmath>
#include <iostream>

int main(){
    double broj;
    int suma_djelilaca;
    for(;;){
        suma_djelilaca=0;
        std::cout << "Unesite prirodan broj ili 0 za kraj: ";
        std::cin >> broj;
        if(broj<0 || !std::cin || broj!=int(broj)){
            std::cout << "Niste unijeli prirodan broj!" << std::endl;
            std::cin.clear();
            std::cin.ignore(10000, '\n');
        }
        else if(broj==0){
            std::cout << "Dovidjenja!";
            return 0;
        }
        else {
            for(int i=1;i<=broj/2;i++){
                if(int(broj)%i==0){
                    suma_djelilaca+=i;
                }
            }
            if(broj==suma_djelilaca){
                std::cout << "Broj " << broj << " je savrsen!" << std::endl;
            }
            else if(broj>suma_djelilaca){
                std::cout << "Broj " << broj << " je manjkav!" << std::endl;
            }
            else if(broj<suma_djelilaca){
                std::cout << "Broj " << broj << " je obilan!" << std::endl;
            }
        }
    }
    return 0;
}
